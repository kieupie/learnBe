<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="/css/home.css" rel="stylesheet" />
    <script src="/js/home.js" defer></script>
</head>

<body>
    <!-- Side bar -->
    <aside class="sidebar">
        <div class="menu-btn">
            <img src="/images/svg/menu.svg" alt="menu">
        </div>

        <div class="sidebar-items">
            <div class="item active">
                <a href="/">
                    <img src="/images/svg/home.svg">
                    <span>Home</span>
                </a>
            </div>
            <div class="item">
                <a href="/create">
                    <img src="/images/svg/shorts.svg" alt="home">
                    <span>Create</span>
                </a>
            </div>
            <div class="item">
                <a href="/sample">
                    <img src="/images/svg/subscription.svg" alt="home">
                    <span>subscription</span>
                </a>
            </div>
            <div class="item">
                <a href="/">
                    <img src="/images/svg/library.svg" alt="home">
                    <span>Library</span>
                </a>
            </div>
        </div>
    </aside>

    <div id="menu">
        <div class="menu-header">
            <div class="menu-btn">
                <img src="/images/svg/menu.svg" alt="menu-icon">
            </div>
            <a href="#">
                <img src="/images/svg/youtube.svg" alt="youtube-logo">
            </a>
        </div>

        <div class="menu-group">
            <div class="menu-item">
                <img src="/images/svg/home.svg">
                <span>Home</span>
            </div>
            <div class="menu-item">
                <img src="/images/svg/shorts.svg">
                <span>Shorts</span>
            </div>
            <div class="menu-item">
                <img src="/images/svg/subscription.svg">
                <span>Subscriptions</span>
            </div>
        </div>

        <div class="menu-group">
            <div class="menu-item">
                <img src="/images/svg/library.svg">
                <span>Library</span>
            </div>
            <div class="menu-item">
                <img src="/images/svg/history.svg">
                <span>History</span>
            </div>
            <div class="menu-item">
                <img src="/images/svg/videos.svg">
                <span>Your Videos</span>
            </div>
            <div class="menu-item">
                <img src="/images/svg/watch-later.svg">
                <span>Watch Later</span>
            </div>
            <div class="menu-item">
                <img src="/images/svg/liked.svg">
                <span>Liked Videos</span>
            </div>
        </div>
    </div>

    <section>
        <nav>
            <a href="">
                <img src="/images/svg/youtube.svg" alt="youtube-logo">
            </a>

            <div class="center">
                <div class="search">
                    <input spellcheck="false" type="text" class="search" id="search" placeholder="Search" />
                    <button class="material-symbols-outlined">search</button>
                </div>
                <button class="material-symbols-outlined">mic</button>
            </div>
            <div class="right-bar">
                <button class="material-symbols-outlined">search</button>
                <button class="material-symbols-outlined">mic</button>
                <button class="material-symbols-outlined">video_call</button>
                <button class="material-symbols-outlined">
                    <span class="badge">9+</span>notifications
                </button>
                <img src="/images/avatar.jpg" />
            </div>
        </nav>

        <main>
            <div class="title">LIST USERS</div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>City</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- <%= JSON.stringify(listUsers) %> -->
                    <!-- <% for (var i=0; i < listUsers.length; i++) { %>
                        <tr>
                            <td>
                                <%= listUsers[i].id %>
                            </td>
                            <td>
                                <%= listUsers[i].email %>
                            </td>
                            <td>
                                <%= listUsers[i].name %>
                            </td>
                            <td>
                                <%= listUsers[i].city %>
                            </td>
                            <td style="display: flex; flex-direction: row;">
                                <button>Edit</button>
                                <button>Delete</button>
                            </td>
                        </tr>
                        <% } %> -->

                    <% listUsers.forEach(function(user) { %>
                        <tr>
                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.city %>
                            </td>
                            <td style="display: grid; gap: 2px;">
                                <a href="/update/<%= user.id %>" class="edit-btn">Edit</a>
                                <form action="/delete-user/<%= user.id %>" method="POST">
                                    <button class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </main>
    </section>

</body>

</html>